{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["@netlify/edge-functions"],
    "outDir": "../../.netlify/edge-functions-dist"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
} 